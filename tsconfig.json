{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Node 14",
    "compilerOptions": {
        "experimentalDecorators": true,
        "lib": [
            "es2020"
        ],
        "module": "commonjs",
        "target": "es2020",
        "strict": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "outDir": "../dist",
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "allowJs": true
    }
}